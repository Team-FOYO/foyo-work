<div class="container">
	<div class="row">
		<div class="col-xs-12">
			<h3>マイページ</h3>
			<h4>登録情報
			<% if @user == current_user %>
				<%= link_to '編集する',edit_user_path(@user), class: "btn btn-primary " %>
				<button class="btn btn-primary">パスワードを編集する</button>
				<% end %>
			</h4>
			<div class="row">
				<div class="col-xs-8">
				   <table class="table">
					<tr>
						<th>氏名</th>
						<td><%= @user.first_name%><%= @user.last_name%></td>
					</tr>
					<tr>
						<th>カナ</th>
						<td><%= @user.first_name_kana%><%= @user.last_name_kana%></td>
					</tr>
					<tr>
						<th>郵便番号</th>
						<td><%= @user.postcode %></td>
					</tr>
					<tr>
						<th>住所</th>
						<td><%= @user.address %></td>
					</tr>
					<tr>
						<th>電話番号</th>
						<td><%= @user.phone_number %></td>
					</tr>
					<tr>
						<th>メールアドレス</th>
						<td><%= @user.email %></td>
					</tr>
		<!-- User側での退会フラグ確認用（最後に消す） -->
					<tr>
						<th>退会フラグ（is_active）</th>
						<td><%= @user.if_is_active%></td>
					</tr>
		<!-- User側での退会フラグ確認用（最後に消す） -->
					</table>
			       </div>
		        </div>
				<h4>配送先
				<%= link_to '一覧を見る',deliveries_path, class: "btn btn-primary " %></h4>
				<h4>注文履歴
				<%= link_to '一覧を見る',orders_path, class: "btn btn-primary " %></h4>
		</div>
	</div>
</div>

