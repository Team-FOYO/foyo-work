<div class="container">
    <div class="row order-total">
        <div class="col-xs-12">
            <p class="order-title">注文履歴一覧</p>
            <table class="table table-bordered order-table">
            <thead>
                <tr>
                    <th class="col-xs-2" bgcolor="#EEEEEE">注文日</th>
                    <th class="col-xs-4" bgcolor="#EEEEEE">配送先</th>
                    <th class="col-xs-2" bgcolor="#EEEEEE">注文商品</th>
                    <th class="col-xs-1" bgcolor="#EEEEEE">支払金額</th>
                    <th class="col-xs-2" bgcolor="#EEEEEE">ステータス</th>
                    <th class="col-xs-1" bgcolor="#EEEEEE">注文詳細</th>
                </tr>
            </thead>
            <tbody>
                <% @orders.each do |order| %>
                <tr>
                    <td>
                        <%=  order.created_at%>
                    </td>
                    <td>
                        <%= order.postal_code %><br>
                        <%= order.address%><br>
                        <%= order.addressee%><br>
                    </td>
                    <td>
                        <% order.order_items.each do |order_item| %>
                        <%= order_item.item.name %><br>
                        <% end %>
                    </td>
                    <td>
                        <%= order.charge %>円
                    </td>
                    <td>
                        <%= order.status %>
                    </td>
                    <td>
                        <%= link_to '表示する', order_path(order), class: "btn btn-sm btn-brown" %>
                    </td>
                </tr>
                <% end %>
            </tbody>
        </table>
    </div>
</div>
</div>