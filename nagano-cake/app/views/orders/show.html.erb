<div class="container">
    <h1 class="order-title">注文履歴詳細</h1>
    <div class="row">
        <div class="col-xs-7">
        <div class="col-xs-12">
            <h2  class="order-title-sm">注文情報</h2>
            <table class="table table-bordered">
                    <tbody>
                        <tr>
                            <th bgcolor="#EEEEEE">注文日</th>
                            <td>
                                <%= @order.created_at %>
                            </td>
                        </tr>
                        <tr>
                            <th bgcolor="#EEEEEE">配送先</th>
                            <td>
                                <%= @order.postal_code %>
                                <%= @order.address %>
                                <%= @order.addressee %>
                            </td>
                        </tr>
                        <tr>
                            <th bgcolor="#EEEEEE">支払方法</th>
                            <td>
                                <%= @order.payment %>
                            </td>
                        </tr>
                        <tr>
                            <th bgcolor="#EEEEEE">ステータス</th>
                            <td>
                                <%= @order.status %>
                            </td>
                        </tr>
                    </tbody>
                </table>
        </div>
        <div class="col-xs-12">
            <h2 class="order-title-sm">注文内容</h2>
            <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th class="col-xs-6" bgcolor="#EEEEEE">商品</th>
                            <th class="col-xs-2" bgcolor="#EEEEEE">単価（税込）</th>
                            <th class="col-xs-2" bgcolor="#EEEEEE">個数</th>
                            <th class="col-xs-2" bgcolor="#EEEEEE">小計</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% @sum = 0 %>
                        <% @order.order_items.each do |order_item| %>
                        <tr>
                            <td>
                                <%= order_item.item.name %>
                            </td>
                            <td>
                                <%= order_item.item.tax %>円</td>
                            <td>
                                <%= order_item.quantity %>個</td>
                            <td>
                                <%=  order_item.unit_price * order_item.quantity %>円
                            </td>
                        </tr>
                        <% @sum += order_item.item.tax*order_item.quantity %>
                        <% end %>
                    </tbody>
                </table>
            </div>
        </div>
        <div class="col-xs-3">
            <h2 class="order-title-sm">請求情報</h2>
            <table class="table table-bordered">
                    <tbody>
                        <tr>
                            <th class="col-xs-5" bgcolor="#EEEEEE">商品合計</th>
                            <td>
                                <%= @sum %>円
                            </td>
                        </tr>
                        <tr>
                            <th class="col-xs-5" bgcolor="#EEEEEE">配送料</th>
                            <td>
                                <%= @order.delivery_charge %>円</td>
                        </tr>
                        <tr>
                            <th class="col-xs-5" bgcolor="#EEEEEE">ご請求額</th>
                            <td>
                                <%= @order.charge %>円
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
     </div>
</div>