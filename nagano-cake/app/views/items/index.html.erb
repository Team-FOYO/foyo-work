<!-- ジャンル検索部分テンプレート -->
<%# render 'genre_search', genre: @genre %><!-- うまくいってない -->

<p><span style="font-size:2em;">会員者の商品一覧 </span>(全<%= @items.count %>件)</p>
<table>
	<tbody>
		<tr><!-- 画像の折り返しはbootstrapで領域を指定すれば実現か？ -->
			<% @items.each do |item| %>
			<th>
				<div><%= image_tag 'no_image.jpg', :size =>'200x100' %><%# attachment_image_tag item, :image, :fill, 200, 100, format: "jpeg" , fallback: "no_image.jpg", size:'200x100' %></div>
				<div><%= item.name %></div>
				<div>¥<%= item.tax %></div>
			</th>
			<% end %>
		</tr>
	</tbody>
</table>
