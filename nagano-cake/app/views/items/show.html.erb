<div class="container itemindex">
	<div class="row">
		<!-- ジャンル検索部分テンプレート -->
		<%= render 'admin/genres/genre_search', genres: @genres %>

		<!-- 商品詳細表示 -->
		<div class="col-xs-5">
			<%= attachment_image_tag @item, :image, format: "jpeg", fallback: "no_image.jpg" %>
		</div>
		<div class="col-xs-5">
			<div class="row item_name"><%= @item.name %></div>
			<div class="row item_description"><%= @item.description %></div>
			<div class="row item_tax"><p><span>¥<%= @item.tax %> </span>(税込)</p></div>

		<!-- 商品個数選択、カートに追加 -->
		<!-- <div class="row"> -->
				<%= form_for @cart_item do |f| %>
				<%= f.hidden_field :item_id, value: @item.id %>
				<%= f.select :quantity, options_for_select((1..20).to_a), include_blank: "個数選択" %>
				<%= f.submit "カートに入れる" %>
				<% end %>
		<!-- </div> -->