<h1>会員の商品詳細</h1>
<%= image_tag 'no_image.jpg' %>
<%# attachment_image_tag @item, :image, :fill, 400, 200, format: "jpeg" , fallback: "no_image.jpg", size:'400 x 200' %>
<h3>
    <%= @item.name %>
</h3>
<p>
    <%= @item.description %>
</p>
<p><span style="font-size:2em;">¥
        <%= @item.tax %> </span>(税込)</p>
<!-- 商品個数選択、カートに追加 -->

<%= form_for @cart_item do |f| %>
<%= f.hidden_field :item_id, value: @item.id %>
<%= f.select :quantity, options_for_select((1..20).to_a), include_blank: "個数選択" %>
<%= f.submit "カートに入れる" %>
<% end %>