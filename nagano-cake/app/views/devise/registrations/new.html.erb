<div class="container">
  <div class="row">
    <div class="col-xs-12">
        <p class="devise-title">新規会員登録</p>
          <div class="col-xs-10 col-xs-offset-1">
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
              <%= render "devise/shared/error_messages", resource: resource %>
              <div class="form-group">
                <table class="table devise-table">
                  <tr>
                    <th class="col-xs-3">名前</th>
                    <td>
                      <%= f.label :first_name,'（姓）'  %>
                    </td>
                    <td>
                      <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", class: "form-control" %>
                    </td>
                    <td>
                      <%= f.label :last_name,'（名）'  %>
                    </td>
                    <td>
                      <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", class: "form-control" %>
                    </td>
                  </tr>
                <tr>
                  <th class="col-xs-3">フリガナ</th>
                    <td><%= f.label :first_name_kana,'（セイ）'  %>
                    </td>
                    <td>
                      <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana", class: "form-control" %>
                    </td>
                    <td>
                      <%= f.label :last_name_kana ,'（メイ）'%>
                    </td>
                    <td>
                      <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana", class: "form-control" %>
                    </td>
                  </tr>
                <tr>
                  <th class="col-xs-3">メールアドレス</th>
                  <td></td>
                  <td>
                    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
                  </td>
                </tr>
                <tr>
                  <th class="col-xs-3">郵便番号（ハイフンなし）</th>
                  <td></td>
                  <td>
                    <%= f.text_field :postcode, autofocus: true, autocomplete: "postcode", class: "form-control" %>
                  </td>
                </tr>
                <tr>
                  <th class="col-xs-3">住所</th>
                  <td></td>
                  <td colspan="3">
                    <%= f.text_area :address, autofocus: true, autocomplete: "address", class: "form-control"  %>
                  </td>
                </tr>
                <tr>
                  <th class="col-xs-3">電話番号（ハイフンなし）</th>
                  <td></td>
                  <td>
                    <%= f.text_field :phone_number, autofocus: true, autocomplete: "phone_number" , class: "form-control"  %>
                  </td>
                </tr>
                <tr>
                  <th class="col-xs-3">パスワード（6文字以上）</th>
                  <td></td>
                  <td>
                      <%= f.password_field :password, autocomplete: "new-password"  , class: "form-control"  %>
                  </td>
                </tr>
                <tr>
                  <th class="col-xs-3">パスワード（確認用）</th>
                  <td></td>
                  <td>
                    <%= f.password_field :password_confirmation, autocomplete: "new-password" , class: "form-control"  %>
                  </td>
                </tr>
                <tr>
                  <td></td>
                  <td colspan="3">
                    <%= f.submit "新規会員登録" ,class: "btn btn-lg btn-block btn-brown "%>
                  </td>
                </tr>
            </table>
            </div>
          <% end %>
          </div>
        <div class="row">
          <div class="col-xs-12">
            <p class="devise-title-sm">既に登録済みの方</p>
          <div class="col-xs-10 col-xs-offset-1">
            <h4><%= link_to 'こちら', new_user_session_path %>からログインしてください。</h4>
          </div>
        </div>

    </div>
  </div>
</div>
