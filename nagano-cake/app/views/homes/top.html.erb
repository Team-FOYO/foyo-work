<div class="user_user">
	<div class="container">
		<div class="row">
			<div class="col-xs-12">
				<div class="col-xs-3">
					<%= render 'admin/genres/genre_search', genres: @genres %>
				</div>
				<div class="col-xs-9">
					<div class="row">
						<div class="top-image">
							<h3>↓トップページ の見出し画像↓</h3>
							<%= image_tag 'no_image.jpg' %>
							<h3>↑トップページ の見出し画像↑</h3>
						</div>
					</div>
					<div class="row">
						<table class="table">
							<!-- オススメ商品は、販売状況が「販売中」の、登録が新しい順 -->
							<h2>オススメ商品</h2>
							<tbody>
								<tr>
									<% @items.first(4).each do |item| %>
									<th>
										<div><%= link_to (item) do %>
												<%= image_tag 'no_image.jpg', :size =>'200x100' %><%# attachment_image_tag item, :image, :fill, 200, 100, format: "jpeg" , fallback: "no_image.jpg", size:'200x100' %></div>
												<% end %>
										<div><%= link_to item.name, item_path(item) %></div>
										<div>¥<%= item.tax %></div>
									</th>
									<% end %>
								</tr>
							</tbody>
						</table>
						<%= link_to '>>もっと見る',items_path %>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>



