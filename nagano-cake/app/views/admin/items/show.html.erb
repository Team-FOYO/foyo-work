<div class="container">
    <div class="row">
        <div class="itemindex">
            <div class="col-xs-12">
            	<h1>商品詳細 画面</h1>
            	<div class="row">
					<div class="col-xs-4">
						<%= attachment_image_tag @item, :image,size:"280x200", fallback: "no_image.jpg" %>
				   	</div>

				   	<div class="col-xs-8">
				   		<table class="table">
							<tr>
								<th>商品名</th>
								<td><%= @item.name%></td>
							</tr>
							<tr>
								<th>商品説明</th>
								<td><%= @item.description%></td>
							</tr>
							<tr>
								<th>ジャンル</th>
								<td><%= @item.genre.name %></td>
							</tr>
							<tr>
								<th>税込価格（税抜価格）</th>
								<td><%= @item.tax %>円（<%= @item.no_tax %>円）</td>
							</tr>
							<tr>
								<th>販売ステータス</th>
								<td><%= @item.if_is_active %></td>
							</tr>
					 	</table>
					 	<div>
					 		<%= link_to '編集する',edit_admin_item_path(@item), class: "btn btn-primary " %>
					 	</div>
			       </div>
				</div>
            </div>
        </div>
    </div>
</div>