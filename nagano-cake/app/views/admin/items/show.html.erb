<div class="container">
    <div class="row">
        <div class="itemindex">
            <div class="col-xs-12">
            	<span class="item_span">商品 詳細画面</span>
            	<div class="row item_show_image">
					<div class="col-xs-3 col-xs-offset-1">
						<%= attachment_image_tag @item, :image, fallback: "no_image.jpg" %>
				   	</div>

				   	<div class="col-xs-7">
				   		<table class="table item_show_table">
							<tr>
								<th>商品名</th>
								<td><%= @item.name%></td>
							</tr>
							<tr>
								<th>商品説明</th>
								<td><%= @item.description%></td>
							</tr>
							<tr>
								<th>ジャンル</th>
								<td><%= @item.genre.name %></td>
							</tr>
							<tr>
								<th>税込価格（税抜価格）</th>
								<td><%= @item.tax %>円（<%= @item.no_tax %>円）</td>
							</tr>
							<tr>
								<th>販売ステータス</th>
								<td><%= @item.if_is_active %></td>
							</tr>
					 	</table>
					 	<div class="col-xs-1 col-xs-offset-11">
					 		<%= link_to '編集する',edit_admin_item_path(@item), class: "btn btn-brown" %>
					 	</div>
			       </div>
			       <div class="col-xs-1">　</div>
				</div>
            </div>
        </div>
    </div>
</div>