<div class="delivery-index">
	<div class="row">
		 <div class="col-xs-8">
		 	<h1>商品一覧</h1>
		 	<div><%= link_to '新規　商品追加',new_admin_item_path, class: "btn btn-primary " %></div>
		   <table class="table">
				<thead>
					<tr>
						<th>商品ID</th>
						<th>商品名</th>
						<th>税抜価格</th>
						<th>ジャンル</th>
						<th>ステータス</th>
					</tr>
				</thead>
				<tbody>
					<% @items.each do |item| %>
					<tr>
						<td>
							<%= item.id %>
						</td>
						<td>
							<%= link_to admin_item_path(item) do %>
							<%= item.name %><% end %>
						</td>
						<td>
							<%= item.no_tax%>円
						</td>
						<td>
							<%= item.genre.name%>
						</td>
						<td>
							<%= item.if_is_active %>
						</td>
					</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>