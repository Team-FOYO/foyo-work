<div class="user_user">
<div class="container">
	<div class="row">
		<div class="col-xs-10 col-xs-offset-1">
			<h3>会員一覧画面</h3>
				<div class="col-xs-10 col-xs-offset-1">
					<table class="table">
						<thead>
							<tr>
								<th class="col-xs-1" style="background-color:#e9e9e9;">会員ID</th>
								<th class="col-xs-3" style="background-color:#e9e9e9;">氏名</th>
								<th class="col-xs-3" style="background-color:#e9e9e9;">メールアドレス</th>
								<th class="col-xs-2" style="background-color:#e9e9e9;">ステータス</th>
							</tr>
						</thead>
						<tbody>
						<% @users.each do |user| %>
							<tr>
								<td><%= user.id%></td>
								<td>
									<%= link_to admin_user_path(user) do %>
									<%= user.first_name%><%= user.last_name%>
									<% end %>
								</td>
								<td><%= user.email%></td>
								<td><%= user.if_is_active %></td>
							</tr>
							<% end %>
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>
</div>
