<div class="user_user">
<div class="container">
	<div class="row">
		<div class="col-xs-12">
			<h3>会員一覧画面</h3>
				<table class="table">
					<thead>
						<tr>
							<th>会員ID</th>
							<th>氏名</th>
							<th>メールアドレス</th>
							<th>ステータス</th>
						</tr>
					</thead>
					<tbody>
					<% @users.each do |user| %>
						<tr>
							<td><%= user.id%></td>
							<td><%= user.first_name %><%= user.last_name %></td>
							<td><%= user.email%></td>
							<td><%= user.if_is_active %></td>
						</tr>
						<% end %>
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>
