<div class="user_user">
<div class="container">
	<div class="row">
		<div class="col-xs-12">
			<h3>会員詳細</h3>

				   <table class="table">
				   	<tr>
						<th>会員ID</th>
						<td><%= @user.id%>
							<% if @user.is_active == true %>
								<span class="label label-success"><%= @user.if_is_active%>会員</span>
							<% else %>
								<span class="label label-danger"><%= @user.if_is_active%>会員</span>
							<% end%>
						</td>
					</tr>
					<tr>
						<th>氏名</th>
						<td><%= @user.first_name%><%= @user.last_name%></td>
					</tr>
					<tr>
						<th>カナ</th>
						<td><%= @user.first_name_kana%><%= @user.last_name_kana%></td>
					</tr>
					<tr>
						<th>郵便番号</th>
						<td><%= @user.postcode %></td>
					</tr>
					<tr>
						<th>住所</th>
						<td><%= @user.address %></td>
					</tr>
					<tr>
						<th>電話番号</th>
						<td><%= @user.phone_number %></td>
					</tr>
					<tr>
						<th>メールアドレス</th>
						<td><%= @user.email %></td>
					</tr>
					</table>
			       </div>
		        </div>
				<h4>配送先
				<%= link_to '編集する', edit_admin_user_path(@user), class: "btn btn-primary " %></h4>
				<h4>注文履歴
				<%= link_to '注文履歴一覧を見る', order_index_admin_user_path, class: "btn btn-primary " %></h4>
		</div>
	</div>
</div>
</div>