<div class="user_user">
	<div class="container">
		<div class="row">
			<div class="col-xs-12">
			<p class="user-title">会員詳細</p>
				<div class="col-xs-6">
				   <table class="table admin-user-show-table">
					   	<tr>
							<th class="col-xs-2">会員ID</th>
							<td class="col-xs-3"><h5><%= @user.id%>
								<% if @user.is_active == true %>
									<span class="label label-success"><%= @user.if_is_active%>会員</span>
								<% else %>
									<span class="label label-danger"><%= @user.if_is_active%></span>
								<% end%>
								</h5>
							</td>
						</tr>
						<tr>
							<th class="col-xs-2">氏名</th>
							<td class="col-xs-3"><%= @user.first_name%><%= @user.last_name%></td>
						</tr>
						<tr>
							<th class="col-xs-2">カナ</th>
							<td class="col-xs-3"><%= @user.first_name_kana%><%= @user.last_name_kana%></td>
						</tr>
						<tr>
							<th class="col-xs-2">郵便番号</th>
							<td class="col-xs-3"><%= @user.postcode %></td>
						</tr>
						<tr>
							<th class="col-xs-2">住所</th>
							<td class="col-xs-3"><%= @user.address %></td>
						</tr>
						<tr>
							<th class="col-xs-2">電話番号</th>
							<td class="col-xs-3"><%= @user.phone_number %></td>
						</tr>
						<tr>
							<th class="col-xs-2">メールアドレス</th>
							<td class="col-xs-3"><%= @user.email %></td>
						</tr>
						<tr>
							<td class="col-xs-1"><%= link_to '編集する', edit_admin_user_path(@user), class: "btn btn-brown " %></td>
							<td class="col-xs-3"><%= link_to '注文履歴一覧を見る', order_index_admin_user_path, class: "btn btn-brown " %></td>
						</tr>
					</table>
				</div>
			</div>
		</div>
	</div>
</div>