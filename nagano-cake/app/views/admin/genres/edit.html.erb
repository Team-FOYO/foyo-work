<div class="container">
	<div class="row genre_row">
		<!-- エラーメッセージ -->
		<% if @genre.errors.any? %>
		    <%= pluralize(@genre.errors.count,"error") %>
		    <ul>
		        <% @genre.errors.full_messages.each do |msg| %>
		            <li><%= msg %></li>
		         <% end %>
		     </ul>
		<% end %>

		<div class="genre_title">ジャンルの編集画面</div>
		<!-- 編集フォーム -->
		<div class="col-xs-11 col-xs-offset-1">
		<div class="row">
		<span class="genre_form_span">ジャンル</span>
		<%= form_for(@genre, url:admin_genre_path, html: { class: "genre_form" }) do |f| %>

			<%= f.text_field :name %>
			<span class="genre_span"><%= f.radio_button :is_active, :true, checked: true %>有効</span>
			<span class="genre_span"><%= f.radio_button :is_active, :false %>無効</span>
			<%= f.submit '変更を保存する', class: "btn btn-brown" %>

		<% end %>
		</div>
		</div>
	</div>
</div>