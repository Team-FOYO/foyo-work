<% if @genre.errors.any? %>
    <%= pluralize(@genre.errors.count,"error") %>
    <ul>
        <% @genre.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
         <% end %>
     </ul>
<% end %>

<h1>ジャンル追加・一覧画面</h1>
<!-- 新規投稿フォーム -->
<p>ジャンル</p>
<%= form_for(@genre,url:admin_genres_path) do |f| %>

	<%= f.text_field :name %>
	<%= f.radio_button :is_active, :true, checked: true %>有効
	<%= f.radio_button :is_active, :false %>無効
	<%= f.submit '追加', class: "btn btn-primary" %>

<% end %>

<!-- ジャンル一覧 -->
<table class="">
	<thead>
		<th>ジャンル</th>
		<th>状態</th>
	</thead>
	<tbody>
		<% @genres.each do |genre| %>
			<tr>
				<td><%= genre.name %></td>
				<td><%= genre.if_is_active %></td>
				<td><%= link_to "編集する", edit_admin_genre_path(genre), class: "btn btn-primary" %></td>
			</tr>
		<% end %>
	</tbody>
</table>