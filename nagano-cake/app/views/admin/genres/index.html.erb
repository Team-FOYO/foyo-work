<div class="container">
	<div class="row">
		<!-- エラーメッセージ -->
		<% if @genre.errors.any? %>
		    <%= pluralize(@genre.errors.count,"error") %>
		    <ul>
		        <% @genre.errors.full_messages.each do |msg| %>
		            <li><%= msg %></li>
		         <% end %>
		     </ul>
		<% end %>

		<p class="genre_title">ジャンル追加・一覧画面</p>
		<!-- 新規投稿フォーム -->
		<div class="col-xs-11 col-xs-offset-1">
			<span class="genre_form_span">ジャンル</span>
			<%= form_for(@genre,url:admin_genres_path, html: { class: "genre_form" }) do |f|  %>

				<%= f.text_field :name %>
				<span class="genre_span"><%= f.radio_button :is_active, :true, checked: true %>有効</span>
				<span class="genre_span"><%= f.radio_button :is_active, :false %>無効</span>
				<%= f.submit '追加', class: "btn btn-brown" %>

			<% end %>
		</div>

		<!-- ジャンル一覧 -->
		<table class="col-xs-5 col-xs-offset-1 table genre_index_table">
			<thead>
				<th class="col-xs-2">ジャンル</th>
				<th class="col-xs-1">状態</th>
				<th class="col-xs-1"></th>
			</thead>
			<tbody>
				<% @genres.each do |genre| %>
					<tr>
						<td><%= genre.name %></td>
						<td><%= genre.if_is_active %></td>
						<td><%= link_to "編集する", edit_admin_genre_path(genre), class: "btn btn-brown" %></td>
					</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>